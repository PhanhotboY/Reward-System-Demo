doctype html
html
    head
        title Login Page
        link(rel="stylesheet", href="./css/login.css")
    body
        .login-container
            .login-heading Login
            form(action="/login", method="POST")
                label(for="username") Username:
                input.login-input( type="text", id="username", name="username")
                br
                label(for="password") Password:
                input.login-input(type="password", id="password", name="password")
                br
                input.login-button(type="submit", value="Login")
