extends ../secretary.pug

append content
        .form-container
            .form-heading #{type}
            form(action="/secretary/issue-token", method="POST")
                label(for="employee") Select Employee:
                select.form-select#employee(name="employeeId") 
                    each emp in data 
                        option(value=emp.id) #{emp.user_name} - #{emp.address}
                br
                label(for="tokenType") Select Token Type:
                select.form-select#tokenType(name="tokenType")
                    option(value="rewardToken") Reward token
                    option(value="penaltyToken") Penalty token
                br
                label(for="tokenAmount") Token Amount:
                input.form-input#tokenAmount(type="number", name="amount", min="1", max="10000" required)

                input.submit-button(type="submit", value="submit")
